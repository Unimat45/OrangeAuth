{
    "name": "orange-auth",
    "version": "1.1.0",
    "type": "module",
    "description": "Simple modular auth library",
    "author": "Mathieu Dery mathieu.dery@bananastreaming.ca",
    "license": "GPL-3.0-or-later",
    "repository": {
        "url": "https://github.com/Unimat45/OrangeAuth.git"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "default": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./strategies": "./dist/strategies/index.js",
        "./providers": "./dist/providers/index.js",
        "./functions": "./dist/functions/index.js"
    },
    "scripts": {
        "build": "tsc",
        "test": "vitest",
        "lint": "eslint . --cache",
        "check": "tsc --noEmit",
        "prettier:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
        "prettier:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache"
    },
    "dependencies": {
        "@universal-middleware/core": "^0.4.16",
        "cookie": "^1.1.1",
        "jsonwebtoken": "^9.0.3",
        "universal-cookie": "^8.0.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@trivago/prettier-plugin-sort-imports": "^6.0.2",
        "@types/bun": "^1.3.8",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^25.1.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "prettier": "^3.8.1",
        "prettier-plugin-brace-style": "^0.9.0",
        "prettier-plugin-merge": "^0.9.0",
        "tslib": "^2.8.1",
        "type-fest": "^5.4.3",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.54.0",
        "vitest": "^4.0.18"
    }
}
